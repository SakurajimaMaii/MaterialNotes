<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/zh_basic_setting"
        app:iconSpaceReserved="false">

        <EditTextPreference
            app:title="页面字体大小"
            app:key="@string/key_screen_size"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false" />

        <ListPreference
            app:defaultValue="列表"
            app:entries="@array/list_mode_entries"
            app:entryValues="@array/list_mode_values"
            app:key="@string/key_list_mode"
            app:title="@string/zh_main_list_mode"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>


</PreferenceScreen>